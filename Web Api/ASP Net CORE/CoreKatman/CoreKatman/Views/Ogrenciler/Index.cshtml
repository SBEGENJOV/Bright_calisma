@model IEnumerable<CoreModel.Model.Ogrenciler>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
@using (Html.BeginForm())
{
    <div style="text-align:center">
        <p style="font-family:Papyrus; font-size:150%; color:black">Aranacak Çalışanı gir:</p>
        @Html.TextBox("x", null, new { @style = "border-radius:10px" })<br />
        <input type="submit" value="Arama" style="border-radius:10px; margin-top:10px" class="btn btn-success" />
    </div>
}
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.AdSoyad)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Sinif)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.KayitTarihi)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Giris)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.AdSoyad)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Sinif)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.KayitTarihi)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Giris)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.OgrenciID">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.OgrenciID">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.OgrenciID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
