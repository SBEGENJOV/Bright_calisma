@model CoreModelLayer.Model.Birimler

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Birimler</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="BirimAd" class="control-label"></label>
                <input asp-for="BirimAd" class="form-control" />
                <span asp-validation-for="BirimAd" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="BirimCalisanSayisi" class="control-label"></label>
                <input asp-for="BirimCalisanSayisi" class="form-control" />
                <span asp-validation-for="BirimCalisanSayisi" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="GorevNO" class="control-label"></label>
                <input asp-for="GorevNO" class="form-control" />
                @Html.DropDownListFor(m => m.GorevNO, (List<SelectListItem>)ViewBag.datalar)
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
