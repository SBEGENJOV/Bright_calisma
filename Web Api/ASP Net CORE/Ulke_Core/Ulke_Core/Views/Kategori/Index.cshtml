@model IEnumerable<Ulke_Core.Model.Kategori>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Admin_Layout.cshtml";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.KategoriName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.KategoriDescription)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.KategoriStatus)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.KategoriName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.KategoriDescription)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.KategoriStatus)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.KategoriID">Edit</a> |
                <a asp-action="Delete" asp-route-id="@item.KategoriID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
