@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<button class="btn btn-sm btn-outline-primary m-2" id="btnAddEpmloye">Yeni Çalışan Ekle</button>
<table class="table table-dark rounded">
    <thead>
        <tr class="text-center">
            <th>Id</th>
            <th>Name</th>
            <th>City</th>
            <th>State</th>
            <th>Salary</th>
            <th>İşlemler</th>
        </tr>
    </thead>
    <tbody class="text-center" id="table_date">
    </tbody>
</table>
<div class="modal fade" id="employeeModel">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h1 class="text-info modal-title" id="employeeHeading"></h1>
                <button class="btn" onclick="HideModalPopUp()"><span aria-hidden="true">&times;</span></button>
            </div>
            <div class="modal-body ">
                <form method="post">
                    <div class="form-group" id="empId">
                        <label>ID</label>
                        <input type="text" class="form-control" id="EmployeeID" disabled="disabled" />
                    </div>
                    <div class="form-group">
                        <label>Name</label>
                        <input type="text" placeholder="İsim" class="form-control" id="Name" autocomplete="off" />
                    </div>
                    <div class="form-group">
                        <label>City</label>
                        <input type="text" placeholder="Il" class="form-control" id="city" autocomplete="off" />
                    </div>
                    <div class="form-group">
                        <label>State</label>
                        <input type="text" placeholder="İlçe" class="form-control" id="state" autocomplete="off" />
                    </div>
                    <div class="form-group">
                        <label>Salary</label>
                        <input type="text" placeholder="Maaş" class="form-control" id="salary" autocomplete="off" />
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button class="btn btn-primary" onclick="AddEmploye()" id="AddEmploye">Save</button>
                <button class="btn btn-primary" onclick="AddEmploye()" id="AddEmploye">Save</button>
                <button class="btn btn-primary" onclick="AddEmploye()" id="AddEmploye">Save</button>
                <button class="btn btn-primary" onclick="AddEmploye()" id="AddEmploye">Save</button>
                <button class="btn btn-warning" onclick="updateEmployee()" style="display:none" id="btnUpdate">Update</button>
                <button class="btn btn-danger btn-default" onclick="tamKapat()">Close</button>
            </div>
        </div>
    </div>
</div>
<div>
    <input type="hidden" id="urlEmployeData" value="@Url.Action("EmployeList","EmployeControler")" />
</div>

<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/lib/jquery/dist/jquery.js"></script>
<script src="~/lib/bootstrap/dist/js/bootstrap.js"></script>
<script src="~/js/crud.js"></script>