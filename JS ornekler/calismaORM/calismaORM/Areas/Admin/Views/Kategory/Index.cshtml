@model IEnumerable<calismaORMModel.Kategori>

<div class="container">
    <div class="row">
        <div class="col-6">
            <h2>Kategori List</h2>
        </div>
        <div class="col-6">
            <a asp-controller="Kategory" asp-action="Create" class="btn btn-primary ">
                <span>Yeni Kategori</span>
            </a>
        </div>
    </div>
    <div class="row">

        <table class="table table-bordered table-striped my-2">
            <thead>
                <tr>
                    <th>
                        Kategori Name
                    </th>
                    <th>
                        İşlemler
                    </th>
                </tr>
            </thead>

            <tbody>
                @if (Model != null && Model.Any())
                {
                    @foreach (var item in Model)
                    {
                        if (item != null)
                        {
                            <tr>
                                <td>@item.KategoriAdi</td>
                                <td>
                                    <a asp-controller="Kategory" asp-action="Edit" asp-route-id="@item.Id" class="btn btn-primary">
                                        Edit
                                    </a>
                                    <a asp-controller="Kategory" asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger">
                                        Delete
                                    </a>
                                </td>
                            </tr>
                        }
                    }
                }
                else
                {
                    <p>No categories found.</p>
                }
                
            </tbody>
        </table>
    </div>


</div>