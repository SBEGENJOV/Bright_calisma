@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<button class="btn btn-sm btn-outline-primary m-2" id="btnAddKitap">Yeni Yazar Ekle</button>
<table class="table table-dark rounded">
    <thead>
        <tr class="text-center">
            <th>Kitap Id</th>
            <th>Kitap Ad</th>
            <th>Kitap Yazar</th>
            <th>Kitap Yıl</th>
            <th>Kitap Sayfa</th>
            <th>İşlemler</th>
        </tr>

    </thead>
    <tbody class="text-center" id="table_date">
    </tbody>
</table>
<div class="modal fade" id="kitapModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h2 class="modal-title" id="ustModal"></h2>
                <button type="button" class="close" onclick="HideModalPopUp()" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form method="post">
                    <div class="form-group" id="kitapIDdiv">
                        <label for="recipient-name" class="col-form-label">Kitap ID:</label>
                        <input type="text" class="form-control" id="kitapID">
                    </div>
                    <div class="form-group">
                        <label for="recipient-name" class="col-form-label">Kitap Adı:</label>
                        <input type="text" class="form-control" id="kitapAd">
                    </div>
                    <div class="form-group">
                        <label for="recipient-name" class="col-form-label">Kitap Yazar:</label>
                        <input type="text" class="form-control" id="kitapYazar">
                    </div>
                    <div class="form-group">
                        <label for="recipient-name" class="col-form-label">Kitap Yıl :</label>
                        <input type="text" class="form-control" id="kitapYil">
                    </div>
                    <div class="form-group">
                        <label for="recipient-name" class="col-form-label">Kitap Sayfa:</label>
                        <input type="text" class="form-control" id="kitapSayfa">
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button class="btn btn-primary" onclick="kitapAdd()" id="addBtn">Save</button>
                <button class="btn btn-warning" onclick="update()" style="display:none" id="updateBtn">Update</button>
                <button class="btn btn-danger btn-default" onclick="HideModalPopUp()">Close</button>
            </div>
        </div>
    </div>
</div>
<div>
    <input type="hidden" id="urlKitapData" value="@Url.Action("KitapList","Kitap")" />
</div>
<script src="~/js/jskitap.js"></script>