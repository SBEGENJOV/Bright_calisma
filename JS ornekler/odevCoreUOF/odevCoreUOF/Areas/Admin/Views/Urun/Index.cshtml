@model IEnumerable<ModelLayer.Urun>

<div class="container">
    <a asp-controller="Urun" asp-action="Crup" class="btn btn-outline-primary"><span>Yeni Ürün Ekle</span></a>
    <table class="table">
        <thead>
            <tr>
                <th>Ürün ID:</th>
                <th>Kategory Ad:</th>
                <th>Ürün Ad:</th>
                <th>Ürün Açıklama:</th>
                <th>Ürün Fiyat:</th>
                <th>İşlemler</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <th>@item.urunID</th>
                    <th>@item.Kategori.ad</th>
                    <th>@item.ad</th>
                    <th>@item.aciklama</th>
                    <th>@item.fiyat</th>
                    <th>
                        <a asp-controller="Urun" asp-action="Crup" asp-route-id="@item.urunID" class="btn btn-outline-warning">Düzenle</a>
                        || <a asp-controller="Urun" asp-action="Delete" asp-route-id="@item.urunID" class="btn btn-outline-danger">Sil</a>
                    </th>
                </tr>
            }
        </tbody>
    </table>
</div>
