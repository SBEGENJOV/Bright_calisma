@model baukolej.Models.Kullanicilar
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Login</title>
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
</head>
<body>
    <div class="container">
        <h2>Giriş Yapınız</h2>
        @ViewBag.mesaj
        @using (Html.BeginForm("Login", "Security", FormMethod.Post))
        {

            <div class="from-group">
                @Html.LabelFor(m => m.kullaniciAdi)
                @Html.TextBoxFor(m => m.kullaniciAdi, new { @class = "form-control", placeholder="Kullanıcı Adı" })
            </div>

            <div class="from-group">
                @Html.LabelFor(m => m.sifre)
                @Html.PasswordFor(m => m.sifre, new { @class = "form-control", placeholder = "sifre" })
            </div>

            <button type="submit" class="btn btn-primary"> Giriş </button>

        }
    </div>
</body>
</html>
