@model IEnumerable<baukolej.Models.Ogrenciler>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutPage1.cshtml";
}
@Html.ActionLink("Yeni Öğrenci Ekle", "Yeni", null, new { @style = "margin-top:10px;margin-bottom:15px;", @class = "btn btn-primary" })
<table class=" text-bg-dark">
    <thead>
        <tr>
            <th>Ogrenci No</th>
            <th>Ogrenci Adi</th>
            <th>Dogum Tarihi</th>
            <th>Burs Durumu</th>
            <th>Adres</th>
            <th>Tel No</th>
            <th>Okul No</th>
        </tr>
    </thead>
    <tbody>

        @foreach (var ogrenci in Model)
        {
            <tr>
                <td>@ogrenci.ogrenciNo</td>
                <td>@ogrenci.AdSoyad</td>
                <td>@ogrenci.DogumTarih</td>
                <td>@ogrenci.BursDurumu</td>
                <td>@ogrenci.Adres</td>
                <td>@ogrenci.Telefon</td>
                <td>@ogrenci.okulNo</td>
                <td>
                    @Html.ActionLink("Düzenle", "Edit", new { id = ogrenci.ogrenciNo }, new { @class = "btn btn-success" }) |
                                @Html.ActionLink("Sil", "Delete", new { id = ogrenci.ogrenciNo }, new { @class = "btn btn-danger" })
                            </td>
            </tr>
        }
    </tbody>
</table>


