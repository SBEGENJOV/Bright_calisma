@model IEnumerable<model_first.Models.Personel>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutPage1.cshtml";
}

@*<p>
    @Html.ActionLink("Yeni Personel", "Yeni", null, new { @class = "btn btn-danger" })
</p>*@

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.AdSoyad)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Yas)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Telefon)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Adres)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.AdSoyad)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Yas)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Telefon)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Adres)
            </td>
            <td>
                @Html.ActionLink("Düzenle", "Edit", new { id = item.PersonelNo }, new {@class="btn btn-warning"}) |
                @Html.ActionLink("Sil", "Delete", new { id = item.PersonelNo }, new { @class = "btn btn-danger" })
            </td>
        </tr>
    }

</table>
