@model user_admin.Models.calisan
@{
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <title>Giriş</title>
</head>
<body>
    
    <div class="container">
        <h2>Giriş Yapınız</h2>
        @ViewBag.mesaj
        @using (Html.BeginForm("Login", "Security", FormMethod.Post))
        {
            <div class="form-group ">
                @Html.Label("Kullanıcı Adı:")<br />
                @Html.TextBoxFor(x => x.calisanAdSoyad, new { @class = "form-control", placeholder = "Kullanıcı Adı" }) <br />

                @Html.Label("Şifre")<br />
                @Html.PasswordFor(x => x.calisanTel, new { @class = "form-control", placeholder = "sifre" }) <br />
            </div>
            <button type="submit" class="btn btn-primary mt-2"> Giriş Yap</button>
                @Html.ActionLink("Geri","Index","Home",null, new {@class= "btn btn-primary mt-2" })
        }
    </div>
</body>
</html>
